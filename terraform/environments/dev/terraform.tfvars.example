# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

region       = "us-east-1"
environment  = "dev"
project_name = "gitops"
owner        = "your-name" # Change this to your name

vpc_cidr         = "10.0.0.0/16"
cluster_version  = "1.28"

# IMPORTANT: Restrict this to your IP address for security
# Get your IP: curl ifconfig.me
public_access_cidrs = [
  "0.0.0.0/0" # Change this to "YOUR_IP/32"
]
